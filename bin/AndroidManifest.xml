        <activity android:name="com.randerson.activities.ViewBookmarks" android:screenOrientation="portrait"></activity>
        <service android:name="com.randerson.services.VideoPlayerService"></service>
        <activity android:name="com.randerson.activities.AddDocumentsActivity" android:screenOrientation="portrait"></activity>
        

<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    
    <LinearLayout style="?android:attr/buttonBarStyle" android:orientation="horizontal" android:padding="10dip"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/theme_1_3">
        
        <Button style="?android:attr/buttonBarButtonStyle" android:textColor="@android:color/white" android:background="@drawable/button_gradient" android:id="@+id/addPhotoBtn" android:layout_width="0dip" android:layout_weight="0.33" android:layout_height="wrap_content" android:text="@string/add"/>
   		<Button style="?android:attr/buttonBarButtonStyle" android:textColor="@android:color/white" android:background="@drawable/button_gradient" android:id="@+id/restorePhotoBtn" android:layout_width="0dip" android:layout_weight="0.33" android:layout_height="wrap_content" android:text="@string/remove"/>
    	<Button style="?android:attr/buttonBarButtonStyle" android:textColor="@android:color/white" android:background="@drawable/button_gradient" android:id="@+id/trashPhotoBtn" android:layout_width="0dip" android:layout_weight="0.33" android:layout_height="wrap_content" android:text="@string/trash"/>
         
    </LinearLayout>
    
    <TableLayout android:id="@+id/photoTable" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="10dip"/>
    
</LinearLayout>